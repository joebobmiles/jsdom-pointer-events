{
  "name": "@joebobmiles/pointer-events-polyfill",
  "version": "1.0.0-alpha.1",
  "private": false,
  "description": "A pointer event polyfill for JSDOM.",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joebobmiles/pointer-events-polyfill.git"
  },
  "keywords": [
    "pointer",
    "events",
    "event",
    "polyfill",
    "jsdom"
  ],
  "author": {
    "name": "Joseph R Miles",
    "email": "joe@jrm.dev",
    "url": "https://jrm.dev"
  },
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/joebobmiles/pointer-events-polyfill/issues"
  },
  "homepage": "https://github.com/joebobmiles/pointer-events-polyfill#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@joebobmiles/eslint-config-typescript": "^1.1.0",
    "@joebobmiles/tsconfig": "^1.0.0",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/dom": "^7.29.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "global": "writable"
    },
    "plugins": [
      "jest",
      "jest-dom",
      "testing-library"
    ],
    "extends": [
      "@joebobmiles/eslint-config-typescript",
      "plugin:jest/recommended",
      "plugin:jest-dom/recommended",
      "plugin:testing-library/recommended"
    ],
    "ignorePatterns": [
      "dist/**",
      "node_modules/**"
    ],
    "parserOptions": {
      "tsconfigRootDir": "./",
      "project": [
        "./tsconfig.json"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint . && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json"
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
